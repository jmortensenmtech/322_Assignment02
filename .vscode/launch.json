{
    "version": "2.0.0",
    "configurations": 
    [
        {
            "name": "C: gcc.exe build and debug (external Console)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\BIN_DIR\\main.exe",
            "args": ["--subtraction", "5", "3.0"], // argues! ["1","2"]
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",
            "setupCommands": 
            [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        },
        {
            "name": "C: gcc.exe build and debug (external Console with stopAtEntry )",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\bin\\main.exe",
